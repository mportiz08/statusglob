<% content_for :title do %>
  <h2>welcome <%= link_to(current_user.username, current_user) if current_user %></h2>
<% end %>

<% content_for :content do %>
  <% if current_user %>
    <% unless current_user.twitter_account.nil? %>
      <ul id="tweets">
      <% @tweets.each do |t| %>
        <li><%= display_tweet(t) %></li>
      <% end %>
    </ul>
    <% end %>
  <% else %>
    <div id="splash">
      <p id="services">
        <%= link_to(image_tag("icon-bw_facebook.png"), "http://facebook.com", { :title => "facebook"}) %>
        <%= link_to(image_tag("icon-bw_twitter.png"), "http://twitter.com", { :title => "twitter"}) %>
        <%= link_to(image_tag("icon-bw_lastfm.png"), "http://last.fm", { :title => "last.fm"}) %>
        <%= link_to(image_tag("icon-bw_digg.png"), "http://digg.com", { :title => "digg"}) %>
        <%= link_to(image_tag("icon-bw_delicious.png"), "http://delicious.com", { :title => "delicious"}) %>
        <%= link_to(image_tag("icon-bw_flickr.png"), "http://flickr.com", { :title => "flickr"}) %>
      </p>
      <p id="description">
        To get started, sign up or login and connect your social media accounts. Then enjoy the simplicity of <%= app_name %>.
      </p>
      <p id="buttons">
        <%= link_to("sign up", new_user_path, { :id => "button-signup" }) %>
        <%= link_to("login", login_path, { :id => "button-login" }) %>
      </p>
    </div>
  <% end %>
<% end %>

<% content_for :head do %>
  <%= stylesheet_link_tag "tipTip" %>
  <%= javascript_include_tag "jquery.tipTip" %>
  <script type="text/javascript">
    $(document).ready(function() {
      var origFilename;
      
      $('#services img').hover(function() {
        // change black&white icons to colored icons
        origFilename = $(this).attr("src");
        var newFilename = origFilename.replace("-bw", "");
        $(this).attr("src", newFilename);
      }, function() {
        // change colored icons back to black&white
        $(this).attr("src", origFilename);
      });
      
      $('#services a').tipTip({ defaultPosition: "top", edgeOffset: 15});
    });
  </script>
<% end %>
