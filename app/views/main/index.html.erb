<% content_for :title do %>
  <h2>welcome <%= link_to(current_user.username, current_user) if current_user %></h2>
  <% if current_user && current_user.twitter_account %>
    <h3>(here's your twitter feed)</h3>
  <% end %>
<% end %>

<% content_for :content do %>
  <% unless current_user.nil? || current_user.twitter_account.nil? %>  
    <ul>
      <% @tweets.each do |t| %>
        <li><%= display_tweet(t) %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
