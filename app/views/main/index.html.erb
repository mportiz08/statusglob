<% content_for :title do %>
  <h2>welcome <%= current_user.username if current_user %></h2>
  <% if current_user && current_user.twitter_account %>
    <h3>(here's your twitter feed)</h3>
  <% end %>
<% end %>

<% content_for :content do %>
  <% unless current_user.nil? || current_user.twitter_account.nil? %>  
    <ul>
      <% @tweets.each do |t| %>
        <li><%= display_tweet(t) %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>

<% content_for :head do %>
  <script type="text/javascript">
    $(document).ready(function() {
      $('#content').hide();
      $('#content').fadeIn("slow");
    });
  </script>
<% end %>
